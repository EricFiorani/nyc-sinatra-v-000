<h1>Create a New Figure</h1>

<form action="/figures" method="POST">

  <h2>Name</h2>
  <label>Figure Name:</label>
  <input type="text" name="figure[name]" id="figure_name" />

  <br />

  <h2><label>Title</label></h2>
  <%Title.all.each do |title|%>
    <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" value="<%title.id%>" id="title_<%title.id%>">
    <br />
  <%end%>

  <label>Create a New Title:</label>
  <input type="text" name="title[name]" id="new_title" />
  <br />

  <h2><label>Landmarks</label></h2>
  <%Landmark.all.each do |landmark|%>
    <label><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_id][]" value="<%=landmark.id" id="<%landmark_<%landmark.id%>">
    <br />
  <%end%>

  <label>Create a New Landmark:</label>
  <br />
  <span>
  <label for="landmark_name">Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark" />
  <label for="landmark_year">Year:</label>
  <input type="text" name="landmark[year_completed]" id="new_landmark_year" />
  
  <input type="submit" value="Create New Figure" />
  </span>
</form>
